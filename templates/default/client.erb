## log to syslog
require 'rubygems'
require 'syslog-logger'
require 'syslog'

Logger::Syslog.class_eval do
  attr_accessor :sync, :formatter

  def write(message)
    self << message
  end

  def close
  end
end

log_location Logger::Syslog.new("<%= node['chef_client']['log']['syslog_progname'] %>", <%= node['chef_client']['log']['syslog_facility'] %> )
